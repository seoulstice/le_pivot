<div class="container">
  <div class="row">
    <h2>Log in to your Account</h2>
    <table class="table login-form">
      <%= form_for(:session, url: login_path) do |f| %>
        <tr>
          <td class="table-light"><%= f.label :email %></td>
          <td class="table-light"><%= f.text_field :email %></td>
        </tr>
        <tr>
          <td class="table-light"><%= f.label :password %></td>
          <td class="table-light"><%= f.password_field :password %></td>
        </tr>
        <tr class="action">
          <td class="table-light"><%= f.submit name="Login", class: "btn btn-primary" %></td>
          <td class="table-light">Don't have an account with us? <br>
            <%= link_to "Create an account", new_user_path %></td>
        </tr>
        <td><%= link_to "forgot password?", twilio_new_path, class: "forgotten-password"%></td>
        <tr>
        </tr>
      </table>
      <% end %>

  </div>
</div>
