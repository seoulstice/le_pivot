<div class="container">
  <div class="row">
    <% @items.each do |item| %>
      <div class="center-block">
        <div class="card border-white" style="width: 15rem;">
          <%= image_tag item.image, size: "250" %>
          <div class="card-body">
            <p><strong><%= link_to item.title, item_path(item) %></strong></p>
            <!-- <p>Description: <%= item.description %></p> -->
            <p>Price: <%= number_to_currency(item.price) %></p>
            <% unless item.retired? %>
              <%= link_to "Add to cart", cart_path(item_id: item.id), method: :post, class: "badge badge-primary" %>
            <% else %>
              <div class="badge badge-secondary">Retired</div>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
