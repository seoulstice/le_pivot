<div class = "container">
  <h4><%= link_to "Continue shopping", root_path , class: "continue-shopping"%></h4>
  <div class="row text-center item-show">
    <div class='col-6'>
      <%= image_tag @item.image  %>
    </div>
    <div class='card bg-info'>
      <div class='card-body '>
        <h2><strong><%= @item.title %></strong></h2>
        <p><%= @item.description %></p>
        <p>Price: <%= @item.price %><p>
        <%= add_to_cart_button(@item) %>
		  </div>
		</div>
	</div>
</div>
