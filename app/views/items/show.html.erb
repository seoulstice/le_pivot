<div class = "container">
  <h4><%= link_to "Continue shopping", root_path %></h4>
  <div class="row text-center">
    <div class='col-6'>
      <%= image_tag @item.image  %>
    </div>
    <div class='col-6 card bg-info'>
      <div class='card-body '>
        <h2><strong><%= @item.title %></strong></h2>
        <p><%= @item.description %></p>
        <p>Price: <%= @item.price %><p>
        <%= @item.button_to_add_to_cart %>
		  </div>
		</div>
	</div>
</div>
