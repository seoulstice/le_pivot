<div class="container">
  <h3>Admin Orders</h3>
  <nav class="nav nav-tabs" id="myTab" role="tablist">
    <%= navlink "Dashboard" %>
    <%= platform_admin_dashboard_tabs %>
  </nav>
  <div class="container">
    <div class="tab-content" id="nav-tabContent">
      <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">
        <div id="right">
          <div class="dropdown">
            <button class="badge badge-danger dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
              Filter Orders<span class="caret" />
            </button>
            <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
              <% @by_status.each do |status, count| %>
                <li><%= link_to status.capitalize, admin_orders_path(status: status) %></li>
              <% end %>
              <li role="separator" class="divider"></li>
              <li><%= link_to 'View all', admin_orders_path, class: "badge badge-success" %></li>
            </ul>
          </div>
        </div>
        <table class="table table-hover">
 	        <thead>
 	            <tr>
         	      <th>Order #</th>
         	      <th>Order Placed</th>
         	      <th>Order Status</th>
 		      			<th></th>
 		      			<th></th>
 	            </tr>
 	          </thead>
          <tbody>
            <%= render @orders %>
          </tbody>
        </table>
      </div>
    </div>
    <div class="tab-pane fade" id="nav-profile" role="tabpanel" aria-labelledby="nav-profile-tab">...</div>
    <div class="tab-pane fade" id="nav-dropdown1" role="tabpanel" aria-labelledby="nav-dropdown1-tab">...</div>
    <div class="tab-pane fade" id="nav-dropdown2" role="tabpanel" aria-labelledby="nav-dropdown2-tab">...</div>
  </div>
</div>
