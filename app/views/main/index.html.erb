<div class="container">
  <div id="pop-items">
    <h3>Popular Items:</h3>
  </div>
  <div class="row">
    <% @popular_items.each do |item| %>
      <div class="center-block">
        <div class="card border-white" style="width: 15rem;">
          <%= image_tag item.image, class: "card-img-top" %>
          <div class="card-body">
            <p><strong><%= link_to item.title, item_path(item) %></strong></p>
            <p class="teal">Price: <%= item.price %></p>
            <% unless item.retired? %>
              <%= link_to "Add to cart", cart_path(item_id: item.id), method: :post, class: "badge badge-primary" %>
            <% else %>
              <div class="badge badge-secondary">Retired</div>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
