<div class="chatroom-index">
    <h1>Support History</h1>
    <% @chatrooms.each do |chatroom| %>
    <%= link_to chatroom.topic, chatroom_path(chatroom.slug), class: "chatroom-title" %>
    <%= link_to "Delete Chatroom", chatroom_path(slug: chatroom.slug), method: :delete %>
    <br>
    <% end %>

    <%= link_to "Talk to Live Support", new_chatroom_path  %>

</div>
