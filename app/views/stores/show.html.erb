<h3><%= @store.name %></h3>

<%= platform_admin_to_update_store_status(@store) %>
<%= management_to_new_item(@store) %>

<% @store.active_items.each do |item| %>
  <%= image_tag item.image %>
  <%= item.title %>
  <%= item.price %>
  <%= add_to_cart_button(item) %>
  <%= management_to_edit_item(@store, item) %>
<% end %>
